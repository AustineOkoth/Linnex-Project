<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="./linnex-college-utawala.jpg">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="portal.css">
    <title>Reset Password</title>
</head>
<style>
    #reset-password {
        background-color: whitesmoke;
        text-align: center;
        margin-top: 2%;
        width: 60%;
        margin-left: auto;
        margin-right: auto;

    }

    input {
        border: 0px;
        height: 25px;
    }

    button {
        border: 0px;
        background-color: yellow;
        padding: 5px;
        border-radius: 5px;
        margin-left: auto;
        margin-right: auto;
    }

    :focus {
        outline: none;
    }

    [type="password"] {
        font-size: 14px;
        padding-left: 10px;
        font-family: sans-serif;
    }
</style>


<body>
    <div id="top-nav-icon" style="display: flex;">
        <p id="nav-menu-bar"><a href="#" id="nav-menu-link"><i class="bi bi-list" style="color:black;"></i></a></p>
        <h3 style=" margin: auto; color: white;">Linnex Training Institute Utawala</h3>
        <h6><a href="/home" style="color: yellow; text-decoration: none; padding-right: 3px;">Back to Site</a></h6>
    </div>
    <div id="side-nav">
        <div id="logo">
            <img src="./linnex-college-utawala.jpg">
        </div>
        <nav id="side-nav-nav">
            <p id="nav-home" class="nav-link"><a href="/homeportal" class="nav-link-btn">Home</a></p>
            <p id="nav-Ebook" class="nav-link"><a href="#" class="nav-link-btn">E-Library</a></p>
            <p id="nav-Fees" class="nav-link"><a href="#" class="nav-link-btn">Check Fees</a></p>
            <p id="nav-profile" class="nav-link"><a href="/changeprofile" class="nav-link-btn">Change Profile</a></p>
            <p id="nav-profile" class="nav-link"><a href="/changepassword" class="nav-link-btn">Change Password</a></p>
        </nav>
    </div>
    <div id="reset-password">

        <h3 style="color: blue;">Resetting Password for <b><%=registrationNumber%></b></h3>
        <form id="reset-password-form" method="post" action="/changepassword" >
            <input type="password" name="passwordCurrent" id="passwordCurrent" placeholder="Enter Current Password..."
                required> <br><br>
            <input type="password" name="password" id="password" placeholder="Enter New Password..." required> <br><br>
            <input type="password" name=" confirmpassword" id="confirmpassword" placeholder="Confirm New Password..."
                required><br><br>
            <div id="reset-password-error" style="font-size: small; color:red"></div><br>
            <div id="reset-password-error-server" style="font-size: small; color: red;"> <b><%=errorPassword%></b></div><br>
            <button type="submit" value="RESET" style="color: black;">RESET</button><br>
        </form>
    </div>

    <script>
        const form = document.getElementById("reset-password-form");
        const password = document.getElementById("password");
        const confirmPassword = document.getElementById("confirmpassword");
        const resetError = document.getElementById("reset-password-error");

        form.addEventListener("submit", (e) => {
            if (password.value != confirmPassword.value) {
                e.preventDefault();
                resetError.innerHTML = ` The Password and Confirm Password should Match`
            }

        });

        const navMenu = document.getElementById("nav-menu-link");
        const sideNav = document.getElementById("side-nav");

        document.addEventListener('click', () => {
            var isClickSideNavElement = sideNav.contains(event.target);
            var isClickInsideNavMenu = navMenu.contains(event.target);
            if (!isClickSideNavElement) {
                if (isClickInsideNavMenu) {
                    if (sideNav.innerHTML === ``) {
                        sideNav.innerHTML = `<div id="logo">
            <img src="./linnex-college-utawala.jpg">
        </div>
        <nav id="side-nav-nav">
            <p id="nav-home" class="nav-link"><a href="/homeportal" class="nav-link-btn">Home</a></p>
            <p id="nav-Ebook" class="nav-link"><a href="#" class="nav-link-btn">Ebook</a></p>
            <p id="nav-Fees" class="nav-link"><a href="#" class="nav-link-btn">Check Fees</a></p>
            <p id="nav-profile" class="nav-link"><a href="#" class="nav-link-btn">Change Profile</a></p>
            <p id="nav-profile" class="nav-link"><a href="/changepassword" class="nav-link-btn">Change Password</a></p>

        </nav>`
                    }
                    else {
                        sideNav.innerHTML = ``
                    }
                }
                else {
                    sideNav.innerHTML = ``
                }
            }
        });


    </script>

</body>

</html>